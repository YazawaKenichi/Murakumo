// センサの設置位置の算出

#include <stdio.h>
#include <math.h>

void main()
{
    // 半径
    long double radius = 152;    // 半径
    long double alpha = 2;

    // 変数
    long double theta, r;
    long double x, y;
    long double a;

    printf("Diode\n\n");

    a = alpha;
    theta = acos((19 + 2 * a) / 2 / radius);
    r = radius;
    x = r * cos(theta) / 100;
    y = r * sin(theta) / 100;
    theta = theta * 360 / 2 / M_PI;
    printf("%8.3Lf, %8.3Lf, %8.3Lf\n", -x * 100, y * -100, 180 - theta);

    a = -alpha;
    theta = acos((19 + 2 * a) / 2 / radius);
    r = radius;
    x = r * cos(theta) / 100;
    y = r * sin(theta) / 100;
    theta = theta * 360 / 2 / M_PI;
    printf("%8.3Lf, %8.3Lf, %8.3Lf\n", -x * 100, y * -100, 180 - theta);

    a = -alpha;
    theta = acos((19 + 2 * a) / 2 / radius);
    r = radius;
    x = r * cos(theta) / 100;
    y = r * sin(theta) / 100;
    theta = theta * 360 / 2 / M_PI;
    printf("%8.3Lf, %8.3Lf, %8.3Lf\n", x * 100, y * -100, theta);

    a = alpha;
    theta = acos((19 + 2 * a) / 2 / radius);
    r = radius;
    x = r * cos(theta) / 100;
    y = r * sin(theta) / 100;
    theta = theta * 360 / 2 / M_PI;
    printf("%8.3Lf, %8.3Lf, %8.3Lf\n", x * 100, y * -100, theta);
}



